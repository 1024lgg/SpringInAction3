<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd">

    <bean id="duke"
          class="com.vonzhou.springinaction.springidol.Juggler"/>

    <bean id="poeticDuke"
          class="com.vonzhou.springinaction.springidol.PoeticJuggler">
        <constructor-arg value="15"/>
        <constructor-arg ref="sonnet29"/>
    </bean>

    <bean id="sonnet29"
          class="com.vonzhou.springinaction.springidol.Sonnet29"/>

    <bean id="theStage" class="com.vonzhou.springinaction.springidol.Stage"
        factory-method="getInstance"></bean>

    <bean id="auditorium" class="com.vonzhou.springinaction.springidol.Auditorium"
          init-method="turnOnLights"
          destroy-method="turnOffLights"></bean>

    <bean id="kenny"
          class="com.vonzhou.springinaction.springidol.Instrumentalist">
        <property name="song" value="Jingle Bells"/>
    </bean>

    <bean id="saxophone"
          class="com.vonzhou.springinaction.springidol.Saxophone"/>
    <bean id="piano" class="com.vonzhou.springinaction.springidol.Piano"></bean>

    <bean id="kenny2"
          class="com.vonzhou.springinaction.springidol.Instrumentalist">
        <property name="song" value="Jingle Bells"/>
        <property name="instrument" ref="saxophone"/>
    </bean>

    <bean id="kenny3"
          class="com.vonzhou.springinaction.springidol.Instrumentalist">
        <property name="song" value="Jingle Bells"/>
        <property name="instrument">
            <bean class="com.vonzhou.springinaction.springidol.Saxophone"></bean>
        </property>
    </bean>

    <bean id="hank" class="com.vonzhou.springinaction.springidol.OneManBand">
        <property name="instruments">
            <list>
                <ref bean="saxophone"></ref>
                <ref bean="piano"></ref>
            </list>
        </property>
    </bean>

    <bean id="hank2" class="com.vonzhou.springinaction.springidol.OneManBand2">
        <property name="instruments">
            <map>
                <entry key="SAXOPHONE" value-ref="saxophone"></entry>
                <entry key="PIANO" value-ref="piano"></entry>
            </map>
        </property>
    </bean>


    <bean id="carl"
          class="com.vonzhou.springinaction.springidol.Instrumentalist">
        <property name="song" value="#{kenny.song}"/>
    </bean>

    <bean id="songSelector" class="com.vonzhou.springinaction.springidol.SongSelector"></bean>
    <bean id="carl2"
          class="com.vonzhou.springinaction.springidol.Instrumentalist">
        <property name="song" value="#{songSelector.selectSong().toUpperCase()}"/>
    </bean>


